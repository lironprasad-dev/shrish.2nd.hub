<script>
function gpFromMarks(theory, practical, maxTheory, maxPractical, isComputer=false){
    let totalPercent = ((theory/maxTheory)*0.75 + (practical/maxPractical)*0.25)*100;
    if(isComputer){totalPercent = ((theory/maxTheory)*0.5 + (practical/maxPractical)*0.5)*100;}
    if(totalPercent>=90) return 4.0;
    if(totalPercent>=80) return 3.6;
    if(totalPercent>=70) return 3.2;
    if(totalPercent>=60) return 2.8;
    if(totalPercent>=50) return 2.4;
    if(totalPercent>=40) return 2.0;
    return 0;
}
function gradeFromGPA(gp){
    if(gp==4) return 'A+';
    if(gp>=3.6) return 'A';
    if(gp>=3.2) return 'B+';
    if(gp>=2.8) return 'B';
    if(gp>=2.4) return 'C+';
    if(gp>=2.0) return 'C';
    return 'NG';
}
function calculate(){
    let subjects=[['Physics','phy',75,25,false],['Chemistry','chem',75,25,false],['Mathematics','math',75,25,false],['Nepali','nep',75,25,false],['English','eng',75,25,false],['Computer Science','comp',50,50,true]];
    let total=0;
    let failed=false;
    let tbody=document.querySelector('#gpaTable tbody');
    tbody.innerHTML='';
    subjects.forEach(s=>{
        let t=Number(document.getElementById(s[1]+'T').value);
        let p=Number(document.getElementById(s[1]+'P').value);
        let sel=Number(document.getElementById(s[1]+'G').value);
        let gp;
        if(t>0 || p>0){
            gp = gpFromMarks(t,p,s[2],s[3],s[5]);
            if((!s[5] && t<30) || (s[5] && t<20)) failed=true;
        }else gp=sel;
        total+=gp;
        tbody.innerHTML += `<tr><td>${s[0]}</td><td>${t||'-'}</td><td>${p||'-'}</td><td>${gp.toFixed(2)}</td><td>${gradeFromGPA(gp)}</td></tr>`;
    });
    if(failed){
        result.innerHTML='RESULT: FAIL';
        result.className='fail';
        return;
    }
    let gpa=(total/6).toFixed(2);
    result.innerHTML='RESULT: PASS<br>Final GPA: '+gpa;
    result.className='pass';
}
</script>
